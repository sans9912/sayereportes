<div class="card mb-4 bg-warning bg-opacity-10">
    <div class="card-header">
        <i class="fas fa-tags me-1"></i>
        Historial de Ventas
    </div>
    <div class="card-body">

        <form action="@Url.Action("ExportarVenta","Home")" method="post">

            <div class="row align-items-end">
                <div class="col-sm-2">
                    <div class="mb-2">
                        <label class="form-label">Fecha de Inicio:</label>
                        <input class="form-control" type="text" id="txtfechainicio" name="fechainicio" />
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="mb-2">
                        <label class="form-label">Fecha Fin:</label>
                        <input class="form-control" type="text" id="txtfechafin" name="fechafin" />
                    </div>
                </div>

                <div class="col-sm-2">
                    <div class="mb-2">
                        <label class="form-label">Id Transaccion:</label>
                        <input class="form-control" type="text" id="txtidtransaccion" name="idtransaccion" />
                    </div>
                </div>

                <div class="col-sm-2">
                    <div class="d-grid mb-2">
                        <button class="btn btn-primary" id="btnbuscar" type="button"><i class="fas fa-search"></i> Buscar</button>
                    </div>
                </div>

                <div class="col-sm-2">
                    <div class="d-grid mb-2">
                        <button class="btn btn-success" type="submit"><i class="fas fa-file-excel"></i> Exportar</button>
                    </div>
                </div>

            </div>

        </form>

        <hr />

        <div class="row">

            <div class="col-sm-12">
                <table id="tabla" class="display cell-border" style="width:100%">
                    <thead>
                        <tr>
                            <th>Fecha Venta</th>
                            <th>Cliente</th>
                            <th>Producto</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>Total</th>
                            <th>ID Transaccion</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>

                </table>
            </div>

        </div>


    </div>
</div>



@section scripts{

    <script>


        var tabladata;
        var ganancia;

        $(document).ready(function () {


            $("#txtfechainicio").datepicker({dateFormat : 'dd/mm/yy'}).datepicker('setDate',new Date())
            $("#txtfechafin").datepicker({ dateFormat: 'dd/mm/yy' }).datepicker('setDate', new Date())


             jQuery.ajax({
                url: '@Url.Action("VistaDashBoard", "Home")',
                type: "GET",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {

                    var objeto = data.resultado;

                    $("#totalcliente").text(objeto.TotalCliente)
                    $("#totalventa").text(objeto.TotalVenta)
                    $("#totalproducto").text(objeto.TotalProducto)

                }
             });

            var UrlI = '@Url.Action("VistaIndicador", "Home")' +
            "?fechainicio=" + $("#txtfechainicio").val() +
            "&fechafin=" + $("#txtfechafin").val()

            jQuery.ajax({
                url: UrlI,
                type: "GET",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    var gananciasActual = data.resultado;

                    $("#totalganancias").text(gananciasActual);
                }
            });
             @*jQuery.ajax({
                url: '@Url.Action("ListarTopProductos", "Home")',
                type: "GET",
                data: null,
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    /*$("<option>").attr({ "value": "0", "disabled": "true" }).text("Seleccionar").appendTo("#cbocategoriaproduc");*/
                    $("<p>").addClass("sub-menu-link").text("Producto : Cantidad vendida").appendTo("#topProductosContainer");
                    // Agregar etiquetas <p> con los datos de ListarTopProductos
                    $.each(data.data, function (index, item) {
                        $("<p>").addClass("sub-menu-link").text(item.Nombres + ": " + item.Cantidad).appendTo("#topProductosContainer");
                    });
                },
                error: function (error) {
                    console.log(error);
                }
            });*@

               jQuery.ajax({
                    url: '@Url.Action("ListarTopProductos", "Home")',
                    type: "GET",
                    data: null,
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        var tableBody = $("#topProductosContainer");

                        // Limpiar contenido previo de la tabla
                        tableBody.empty();



                        // Agregar filas de la tabla con los datos de ListarTopProductos
                        $.each(data.data, function (index, item) {
                            $("<tr>")
                                .append($("<td>").text(item.Nombres).css("height", "2px"))
                                .append($("<td>").text(item.Cantidad).css("height", "2px"))
                                .appendTo(tableBody);
                        });
                    },
                    error: function (error) {
                        console.log(error);
                    }
                });


        // fechainicio,string fechafin,string idtransaccion

            var Url = '@Url.Action("ListaReporte", "Home")' +
            "?fechainicio=" + $("#txtfechainicio").val() +
            "&fechafin=" + $("#txtfechafin").val() +
            "&idtransaccion=" + $("#txtidtransaccion").val()


            tabladata = $("#tabla").DataTable({
                responsive: true,
                ordering: false,
                "ajax": {
                    url: Url,
                    type: "GET",
                    dataType: "json"
                },
                "columns": [
                    {"data":"FechaVenta"},
                    {"data":"Cliente"},
                    {"data":"Producto"},
                    {"data":"Precio"},
                    {"data":"Cantidad"},
                    {"data":"Total"},
                    {"data":"IdTransaccion"}
                ],
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.11.3/i18n/es_es.json"
                }

            });


        })

        $("#btnbuscar").on("click", function () {

             var nueva_url = '@Url.Action("ListaReporte", "Home")' +
            "?fechainicio=" + $("#txtfechainicio").val() +
            "&fechafin=" + $("#txtfechafin").val() +
                "&idtransaccion=" + $("#txtidtransaccion").val()
             var nueva_urlI = '@Url.Action("VistaIndicador", "Home")' +
            "?fechainicio=" + $("#txtfechainicio").val() +
            "&fechafin=" + $("#txtfechafin").val()

            tabladata.ajax.url(nueva_url).load();

            jQuery.ajax({
                url: nueva_urlI,
                type: "GET",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    var ganancia = data.resultado;
                    $("#totalganancias").text(ganancia);
                }
            });

        })





    </script>




}