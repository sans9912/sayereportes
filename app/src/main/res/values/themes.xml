    <style name="ToolbarTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/poppinssemibold</item>
    </style>

    <!--  Toolbar Product  -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="voiceIcon">@drawable/ic_add</item>
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="searchHintIcon">@drawable/ic_search</item>
        <item name="fontFamily">@font/poppinssemibold</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>
    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">@color/black_de</item>
        <item name="colorSecondary">@color/blue</item>
    </style>
